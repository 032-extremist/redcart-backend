    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.11",
    "@types/pdfkit": "^0.17.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
